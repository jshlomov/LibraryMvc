@model IEnumerable<LibraryMvc.Models.Set>

@{
    ViewData["Title"] = "Index";
}

<h1>סטים</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Hight)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Width)
            </th>
            <th>
                כמות ספרים
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Hight)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Width)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Books.Count)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Genre)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning">ערוך</a>
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info">הצג פרטים</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">מחק</a>
                    <a asp-action="CreateBook" asp-route-id="@item.Id" asp-route-Genre="@item.Genre" class="btn btn-success">צור ספר</a>
                </td>
            </tr>
        }
    </tbody>
</table>
